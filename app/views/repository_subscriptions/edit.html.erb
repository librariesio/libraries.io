<div class="row">
  <div class="col-md-12">
    <h1>
      <%= link_to image_tag(@repository.avatar_url(100), width: 50, height: 50, alt: @repository), user_path(@repository.owner.to_param) %>
      <%= link_to @repository.full_name, repository_path(@repository.to_param) %> -
      Monitoring settings
    </h1>
  </div>
  <div class="col-md-6">
    <%= simple_form_for @repository_subscription do |form| %>
      <%= form.input :include_prerelease, label: 'Include notifications about prereleases?' %>
      <%= form.submit class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
