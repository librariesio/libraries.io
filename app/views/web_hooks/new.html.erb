<div class="row">
  <div class="col-md-12">
    <h1>
      <%= link_to image_tag(@github_repository.avatar_url, width: 50, height: 50, alt: @github_repository), user_path(@github_repository.owner_name) %>
      <%= link_to @github_repository.full_name, github_repository_path(@github_repository.owner_name, @github_repository.project_name) %> -
      New Web Hook
    </h1>
  </div>
  <div class="col-md-6">
    <%= simple_form_for @web_hook, url: github_repository_web_hooks_path(@github_repository.owner_name, @github_repository.project_name) do |form| %>
      <%= form.input :url, hint: 'Where the web hook will post data', placeholder: 'https://my-webhook.com/endpoint', label: 'Web Hook URL' %>
      <%= form.submit class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
