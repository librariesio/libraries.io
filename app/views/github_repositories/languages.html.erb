<% title "Programming Languages - Libraries.io" %>
<% description "All the programming languages that every repository has been written in." %>
<h1>
  <i class="fa fa-github"></i> Programming Languages
</h1>
<hr>
<div class='row'>
  <% @languages.each do |language| %>
    <div class='language col-xs-6 col-sm-4 col-md-3'>
      <h4>
        <div class="pictogram pictogram-<%= language.term.downcase %>"></div>
        <div class="blurb">
          <%= link_to language.term, github_search_path(language: language.term) %>
          <small><%= number_to_human language['count'] %> Repos</small>
        </div>
      </h4>
    </div>
  <% end %>
</div>
