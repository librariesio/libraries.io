<% project = version.project %>
<% your_dependent_repos = user.your_dependent_repos(version.project) %>
<% if your_dependent_repos.length > 0 %>
  Used by
  <% your_dependent_repos.limit(10).each_with_index do |repo, i| %>
      <%= link_to repo.full_name, github_repository_url(repo.owner_name, repo.project_name) %><%= ',' unless i == your_dependent_repos.length-1 || i == 9 %>
  <% end %>

  <% if your_dependent_repos.count > 10 %>
    and <%= link_to "more", your_project_dependent_repos_url(version.project.to_param) %>
  <% end %>
<% end %>
