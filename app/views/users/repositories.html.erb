<% title "#{@user}'s Repositories - Libraries" %>

<h1>
  <%= image_tag @user.avatar_url(120), width: 60, height: 60, alt: @user %>
  <%= link_to @user, user_path(@user) %>'s Repositories
</h1>
<hr>
<div class="row">
  <% if @repositories.any? %>
    <div class="col-md-6">
      <%= render @repositories  %>
      <%= will_paginate @repositories, page_links: false %>
    </div>
  <% else %>
    <p>
      No projects found, go back to <%= link_to @user, user_path(@user) %>.
    </p>
  <% end %>
</div>
